<?

$lines = file("vikhlyantsev.htm");
$count = count($lines);

$fp = fopen("vikhlyantsev.idx", "w");

fputs($fp, "Библейский словарь В.П.Вихлянцева\r\n");

$offset = 0;

for($i=0;$i<$count;$i++)
{
	if(substr($lines[$i],0,4)=='<h4>')
		fputs($fp, strip_tags(trim($lines[$i]))."\r\n".$offset."\r\n");

	$offset += strlen($lines[$i]);
}

fclose($fp);

?>